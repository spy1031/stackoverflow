<h1>this is EDIT page of user</h1>

<div class="container">
  <div class="row">

    <div class="col-md-6 col-md-offset-3">

      <h3>編輯個人資料</h3>

      <%= form_for @user do |f| %>
       
        <div class="form-group">
          <%= f.label :name, "姓名" %>
          <%= f.text_field :name, class: "form-control" %>
        </div>
        
        <div class="form-group">
          <%= f.label :introduction, "自我介紹" %>
          <%= f.text_area :introduction, class: "form-control" %>
        </div>
        
        <div class="form-group">
          <%= f.label :company, "公司" %>
          <%= f.text_field :company, class: "form-control" %>
        </div>
        
        <div class="form-group">
          <%= f.label :job_title, "職稱" %>
          <%= f.text_field :job_title, class: "form-control" %>
        </div>
        
        <div class="form-group">
          <%= f.label :website, "個人網站" %>
          <%= f.text_field :website, class: "form-control" %>
        </div>
        
        <div class="form-group">
          <%= f.label :twitter, "Twitter" %>
          <%= f.text_field :twitter, class: "form-control" %>
        </div>
        
        <div class="form-group">
          <%= f.label :github, "GitHub" %>
          <%= f.text_field :github, class: "form-control" %>
        </div>
        
        <div class="form-group">
          <%= f.label :avatar, "大頭照上傳" %>
          <%= image_tag @user.avatar if @user.avatar? %>
          <%= f.file_field :avatar %>
        </div>
        
        <div class="form-group">
          <%= f.submit "更新", class: "btn btn-primary" %>
          <%= link_to "返回", user_path(@user), class: "btn btn-default" %>
        </div>
        
      <% end %>   
    </div>

  </div>
</div>
