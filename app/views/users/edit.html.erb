<div class="container">
  <div class="row">

    <div class="col">
      <%= form_for @user do |f| %>
      <div class="form-group" style="text-align: center">
        <%= image_tag @user.avatar, width: '400px' if @user.avatar? %>
        <%= image_tag "http://via.placeholder.com/400x400", class: "rounded"  unless @user.avatar?%>
        <%= f.file_field :avatar , class:'btn btn-default'%>
      </div>
    </div>

    <div class="col">
      <div class="form-group">
        <%= f.label :name, "姓名" %>
        <%= f.text_field :name, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :company, "公司" %>
        <%= f.text_field :company, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :job_title, "職稱" %>
        <%= f.text_field :job_title, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :website, "個人網站" %>
        <%= f.text_field :website, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :twitter, "Twitter" %>
        <%= f.text_field :twitter, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :github, "GitHub" %>
        <%= f.text_field :github, class: "form-control" %>
      </div>
      <hr style="width: 40%;">
      <div class="form-group">
        <%= f.label :introduction, "自我介紹" %>
        <%= f.text_area :introduction, class: "form-control" %>
      </div>

      <div class="form-group float-right">
        <%= f.submit "更新個人資料", class: "btn btn-info" %>
        <%= link_to "返回", user_path(@user), class: "btn btn-default", style:'color: #17a2b8;' %>
      </div>

      <% end %>
    </div>


  </div>
</div>
